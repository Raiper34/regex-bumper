{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "lib": [
      "es2020",
      "es2020.string",
      "es2020.promise",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    //"inlineSourceMap": true,
    "outDir": "build",
    "strict": false,
    "target": "es2020",
    "declaration": true,
    "declarationDir": "build/types"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
